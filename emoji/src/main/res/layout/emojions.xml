<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/emojicons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical"
    android:visibility="visible">

    <FrameLayout
        android:id="@+id/ChildTabContent"
        android:layout_width="match_parent"
        android:layout_height="160dp" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:background="#AAA" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#CCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/emojicons_menu_add"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:padding="6dp"
            android:src="@drawable/ic_emoji_menu_add" />

        <FrameLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#CCC" />

        <ImageView
            android:id="@+id/emojicons_menu_emojicon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:padding="6dp"
            android:src="@drawable/ic_emoji_smile" />

        <FrameLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#CCC" />

        <ImageView
            android:id="@+id/emojicons_menu_gifts"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:padding="6dp"
            android:src="@drawable/ic_live_gift" />


        <FrameLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#CCC" />

        <TextView
            android:id="@+id/emojicons_menu_settings"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@android:drawable/list_selector_background"
            android:clickable="true"
            android:gravity="center"
            android:padding="6dp"
            android:text="设置" />

        <FrameLayout
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:background="#CCC" />

    </LinearLayout>
</LinearLayout>